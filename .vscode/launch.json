    "version": "0.2.0",
    "configurations": [
        {
            "name": "opencv",
            "type": "cppdbg",
            "request": "launch",
            "program": "/${workspaceFolder}/${fileBasenameNoExtension}.out",
            "preLaunchTask": "opencv",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "PlatformIO Debugger",
            "request": "launch",
            "type": "platformio-debug",
            "preLaunchTask": "PlatformIO",
            "executable": ".pio/build/myenv/firmware.elf",
            "toolchainBinDir": "/usr/local/bin"
        },

        {
            "name": "C",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "C",
            "program": "/${workspaceFolder}/${fileBasenameNoExtension}.out",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "miDebuggerPath": "/usr/bin/gdb",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures":false
                }
            ]
        },

        {
            "name": "C++",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "C++",
            "program": "/${workspaceFolder}/${fileBasenameNoExtension}.out",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "miDebuggerPath": "/usr/bin/gdb",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures":false
                }
            ]
        }

    ]
}
